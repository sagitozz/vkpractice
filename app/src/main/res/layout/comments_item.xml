<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <ImageView
        android:id="@+id/commenterAvatar"
        android:layout_width="@dimen/commenter_avatar_size"
        android:layout_height="@dimen/commenter_avatar_size"
        android:layout_marginStart="@dimen/defaultMargin"
        android:layout_marginTop="@dimen/defaultMargin"
        android:layout_marginBottom="@dimen/defaultMargin"
        app:layout_constraintBottom_toBottomOf="@+id/commenterName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/commenterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/defaultMargin"
        android:layout_marginTop="@dimen/smallMargin"
        android:maxLines="1"
        android:textSize="@dimen/default_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/commenterAvatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/commentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/smallMargin"
        android:layout_marginEnd="@dimen/socialIconMargin"
        android:layout_marginBottom="@dimen/defaultMargin"
        android:textColor="@color/shimmer_gray"
        android:textSize="@dimen/comment_date_size"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/commentText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/commentText"
        android:layout_width="@dimen/wrap_content_constraint"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/defaultMargin"
        android:layout_marginEnd="@dimen/defaultMargin"
        android:textSize="@dimen/dateSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/commenterAvatar"
        app:layout_constraintTop_toBottomOf="@+id/commenterName"
        tools:text="Loren Ipsum Loren IpsumLoren IpsumLoren IpsumLoren IpsumLoren IpsumLoren IpsumLoren IpsumLoren IpsumLoren IpsumLoren IpsumLoren IpsumLoren IpsumLoren IpsumLoren Ipsum" />
</androidx.constraintlayout.widget.ConstraintLayout>
